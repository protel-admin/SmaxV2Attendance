
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Scripts.Render("~/bundles/utility")
@Scripts.Render("~/bundles/bulkassignment")

<Table>
    <tr>
        <td>
            @Html.Label("Department", new { @class = "control-label" })
            @Html.DropDownList("DDL_DEPT", ViewData["Department"] as SelectList, "-- select a value --")
        </td>
        <td width="50"></td>
        <td>
            @Html.Label("Designation", new { @class = "control-label" })
            @Html.DropDownList("DDL_DESIG", ViewData["Designation"] as SelectList, "-- select a value --")
        </td>
        <td>
            <div class="col-md-4">
                <input type="button" id="btngetemp" class="btn btn-info btn-sm" value="Getemployees" />
            </div>
        </td>
    </tr>
    <tr height="50">
        <td></td>
    </tr>
    <tr>
        <td colspan="4">
            <table width="100%">
                <tr>
                    <td valign="top">
                        <div class="table-responsive col-sm-6">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th><input type='checkbox' id='ChkEmp_All' /></th>
                                        <th>Emp Id</th>
                                        <th>Emp Name</th>
                                        <th>Department </th>
                                        <th>Designation</th>
                                    </tr>
                                </thead>
                                <tbody id="tblempdetails"></tbody>
                            </table>
                        </div>
                    </td>
                    <td valign="top">
                        <div class="table-responsive col-sm-6">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th><input type='checkbox' id='ChkAcc_All' /></th>
                                        <th>Access&nbsp;Level&nbsp;Id </th>
                                        <th>Access&nbsp;Level&nbsp;Name</th>
                                    </tr>
                                </thead>
                                <tbody id="tblAcldetails">
                                    @{
                                        foreach (SelectListItem x in (IEnumerable<SelectListItem>)ViewData["ALD_DE_IPADDRESS"])
                                        {
                                            <tr>
                                                @*<td>@Html.CheckBox("Chk_" + x.Value)</td>*@
                                                <td><input type="checkbox" id="Chk_@x.Value" /></td>
                                                <td>@x.Value</td>
                                                <td>@x.Text</td>
                                                
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    
</Table>



   

