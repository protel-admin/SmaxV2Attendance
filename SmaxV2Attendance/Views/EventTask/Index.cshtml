                </select>                
            </div>
        </div>

        <!-- Prepended checkbox -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="chk_relay3">Relay 3 Status</label>
            <div class="col-md-1">
                <div class="input-group">
                    <span class="input-group-addon">
                        <input type="checkbox" id="chk_relay3" name="my-checkbox">
                    </span>
                    
                </div>

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Duration</label>
            <div class="col-md-4">
                <input id="textinput" name="textinput" type="text" placeholder="Duration (1-60 secs)" class="form-control input-md">
                <span class="help-block">Duration of relay status</span>
            </div>
        </div>

        <!-- Prepended checkbox -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="prependedcheckbox">Is Message Needed</label>
