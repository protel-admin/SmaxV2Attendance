<form class="form-horizontal">
    <fieldset>

        <!-- Form Name -->
        <legend>Input 2 (Active)</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Location</label>
            <div class="col-md-4">
                <select id="ddl_location" class="form-control">
                    <option value="0">Select Location</option>
                    <option>Loading...</option>
                </select>                
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Device IP address</label>
            <div class="col-md-4">
                <select id="ddl_device" class="form-control">
                    <option value="0">Select Device</option>
