@{
    ViewBag.Title = "Create";
}

@Scripts.Render("~/bundles/timepicker")
@Styles.Render("~/Content/timepicker")

@Scripts.Render("~/bundles/validator")
@*@Scripts.Render("~/bundles/blockui")*@
@Scripts.Render("~/bundles/timezonedetails")

<script>
    

</script>

<h2>TimeZone Details</h2>
@*@<h4>Create</h4>*@

<form id="frm_timezone" class="form-horizontal" role="form" >
    <div class="col-md-12 well">
        <div class="col-md-3">
            <div class="form-group">
                <div class="col-sm-10">
                    @Html.DropDownList("TimeZone", (IEnumerable<SelectListItem>)ViewBag.TZD_TZ_ID, new { @class = "form-control", @size = "20" })
                </div>
            </div>

        </div>

        <div class="col-md-9">
            @*<div class="form-group">
                    <label class="control-label col-md-2" for="TZD_TZ_ID">Time Zone</label>
                    <div class="col-md-7">
                        @Html.DropDownList("TZD_TZ_ID", (IEnumerable<SelectListItem>)ViewBag.TZD_TZ_ID, new { @class = "form-control" })
                    </div>
                </div>*@

            <div class="form-group">
                <label class="control-label col-md-2" for="TZD_TZ_NAME">Time Zone Name</label>
                <div class="col-md-4">
                    @Html.TextBox("TZD_TZ_NAME", "", new { @class = "form-control", @watermark = "Time Zone Name" })
                </div>
                <div class="col-md-2">
                    <input type="button" id="btnaddtz" class="btn btn-info" value="Create New TimeZone" alt="Create a new Time Zone Name        " />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="TZD_DAYS">Days</label>
                <div class="col-md-4">
                    @Html.DropDownList("TZD_DAYS", (IEnumerable<SelectListItem>)ViewBag.TZD_DAYS, new { @class = "form-control" })

                </div>

            </div>



            <div class="form-group">
                <label class="control-label col-md-2" for="TZD_START_TIME"> Start time</label>
                <div class="col-sm-2">
                    <input type="text" id="TZD_START_TIME" class="form-control time" required />
                </div>
                <label class="control-label col-sm-2" for="TZD_END_TIME">End Time</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control time" id="TZD_END_TIME" name="TZD_END_TIME" required />

                    <script>
                        $(function () {
                            $('#TZD_START_TIME').timepicker({ 'timeFormat': 'H:i' });
                            $('#TZD_END_TIME').timepicker({ 'timeFormat': 'H:i' });

                        });
                    </script>
                </div>
                <div class="col-md-2">
                    <input type="button" class="btn btn-primary" id="btnadd" value="Add">
                    @*<button class="btn btn-primary" id="btnadd">
                            Add &nbsp;
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>*@
                </div>
                <div class="col-md-2">

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2">

                </div>
                <div class="table-responsive col-sm-6">
                    <table class="table table-striped table-bordered well">
                        <thead>
                            <tr>
                                <th>Day</th>
                                <th class="hide">Day Value</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="tbltimedetails"></tbody>
                    </table>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2">

                </div>
                <div class="col-sm-2">
                    @*<div class="input-group">
                            <input type="button" class="btn btn-success" id="btnsave" value="Submit">
                            <span class="input-group-addon glyphicon glyphicon-floppy-disk"></span>
                        </div>*@
                    <button class="btn btn-success" id="btnsave">
                        Submit &nbsp;
                        <span class="glyphicon glyphicon-floppy-disk"></span>
                    </button>
                </div>
                <div class="col-sm-2">
                    @*<input type="button" class="btn btn-info" id="btnreset" value="Clear">*@
                    <button class="btn btn-info" id="btnreset">
                        Clear &nbsp;
                        <span class="glyphicon glyphicon-refresh"></span>
                    </button>
                </div>
                <div class="col-sm-2">

                    @*<div class="input-group">
                            <input type="button" class="btn btn-danger" id="btndelete" value="Delete" />
                        <span class="input-group-addon glyphicon glyphicon-trash"></span>

                        </div>*@

                    <button class="btn btn-danger" id="btndelete">
                        Delete &nbsp;
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                </div>
            </div>

        </div>
    </div>
</form>
