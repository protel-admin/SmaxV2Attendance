
@{
    ViewBag.Title = "View Leave";
}

<h2>View Leave</h2>

@Scripts.Render("~/bundles/utility")
@Scripts.Render("~/bundles/leavedetails")
@Styles.Render("~/Content/datetimepicker")
@Scripts.Render("~/bundles/datetimepicker")
@Styles.Render("~/Content/chkboxliststyle")
@Scripts.Render("~/bundles/chkboxlist")
@Scripts.Render("~/bundles/datagrid")

<div class="container well">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-1">
                Department
            </div>
            <div class="col-md-3">
                @Html.DropDownList("ddl_DepartmentId", (IEnumerable<SelectListItem>)ViewBag.DP_ID, new { @class = "form-control" })
            </div>
            <script>
                $("#ddl_DepartmentId option").eq(0).before($("<option></option>").val("").text("Select")).attr('selected', 'selected');
                $('#ddl_DepartmentId option:eq(1)').prop('selected', false);
            </script>
            <div class="col-md-1">
                Employee
            </div>
            <div class="col-md-5" style="overflow :auto ">
                <div id='jqxWidget' style="display:none">
                    <div>
                        <input class="btn-sm" type="button" id='btnclear' value="Refresh" />
                    </div>
                    <div id="lstemp"></div>
                </div>
            </div>
            <div>
                <input id="btn_View" type="button" value="Submit" class="btn btn-success" />
            </div>
        </div>
        
    </div>
</div> 

<div class="container" >
    <div class="panel panel-default">
        <div class="panel-heading"   >
            <h4 class="panel-title">
                <a id="head_collapse" data-toggle="collapse" data-parent="#accordion" href="#div_collapse">
                    <span class="glyphicon glyphicon-collapse-down"></span> Open
                </a>
            </h4>
        </div>
        <div id="div_collapse" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="row" id="div_daterange">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="col-md-2">
                                From
                            </div>
                            <div class="col-md-5">
                                <input type="text" id="srcdate" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="col-md-2">
                                To
                            </div>
                            <div class="col-md-5">
                                <input type="text" id="trgdate" class="form-control" />
                            </div>
                        </div>
                        <script type="text/javascript">
                            $(function () {
                                $('#srcdate').datetimepicker({
                                    pickTime: false,
                                    format: 'MM/DD/YYYY'
                                });

                                $('#trgdate').datetimepicker({
                                    pickTime: false,
                                    format: 'MM/DD/YYYY'
                                });
                            });
                        </script>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-2">
                        Select Leave Type
                    </div>
                    <div class="col-md-3">
                        @Html.DropDownList("ddl_Leave", (IEnumerable<SelectListItem>)ViewBag.LeaveType, new { @class = "form-control" })
                    </div>
                    <script>
                        $("#ddl_ShiftId option").eq(0).before($("<option></option>").val("").text("Select")).attr('selected', 'selected');
                        $('#ddl_ShiftId option:eq(1)').prop('selected', false);
                    </script>
                    <div class="col-md-3">
                        <label class="radio-inline"><input id="radio1" type="radio" name="optradio" checked>Half Day</label>
                        <label class="radio-inline"><input id="radio2" type="radio" name="optradio">Full Day</label>
                    </div>
                    <div class="col-md-2">
                        <input id="btn_update" type="button" value="Update" class="btn btn-info" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</div>
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div style="height:600px;overflow:auto">
                <table id="datagrid1" class="table table-striped" border="1" cellspacing="0"></table>
            </div>
        </div>
    </div>
</div>

