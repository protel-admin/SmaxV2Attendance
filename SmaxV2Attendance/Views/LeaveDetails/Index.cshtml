@{
    ViewBag.Title = "Index";
}
@Scripts.Render("~/bundles/utility")
@Scripts.Render("~/bundles/leavedetails")
@Styles.Render("~/Content/datetimepicker")
@Scripts.Render("~/bundles/datetimepicker")
@Styles.Render("~/Content/chkboxliststyle")
@Scripts.Render("~/bundles/chkboxlist")

<script>

</script>
<h2>Leave Details</h2>
<div class="container well">
    <div class="col-md-5">
        <div class="container">
            <div class="row">
                <div class="col-md-1">
                    Department
                </div>
                <div class="col-md-3">
                    @Html.DropDownList("ddl_DepartmentId", (IEnumerable<SelectListItem>)ViewBag.DP_ID, new { @class = "form-control" })
                </div>
                <script>
                    $("#ddl_DepartmentId option").eq(0).before($("<option></option>").val("").text("Select")).attr('selected', 'selected');
                    $('#ddl_DepartmentId option:eq(1)').prop('selected', false);
                </script>
            </div>
            <div class="row">
                <div class="col-md-1">
                    &nbsp;
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    Employee
                </div>
                <div class="col-md-5" style="overflow :auto ">
                    @*@Html.DropDownList("lst_EmployeeId", Enumerable.Empty<SelectListItem>(), new { @class = "form-control", @size = "20" })*@
                    <div id='jqxWidget' style="display:none">
                        <div>
                            <input class="btn-sm" type="button" id='btnclear' value="Refresh" />
                        </div>
                        <div id="lstemp"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="container">
            <div class="row">
                <div class="col-md-1">

                </div>
                <div class="col-md-5">
                    <label class="radio-inline"><input id="radio1" type="radio" name="optradio" checked>Half Day</label>
                    <label class="radio-inline"><input id="radio2" type="radio" name="optradio">Full Day</label>
                </div>

            </div>
            <div class="row">
                <div class="col-md-1">
                    &nbsp;
                </div>
            </div>
            
            <div class="row" id="div_daterange">

                <div class="alert alert-info col-md-6">
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-1">
                            From
                        </div>
                        <div class="col-md-5">
                            <input type="text" id="srcdate" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-1">
                            To
                        </div>
                        <div class="col-md-5">
                            <input type="text" id="trgdate" class="form-control" />
                        </div>
                    </div>
                    <script type="text/javascript">
                        $(function () {
                            $('#srcdate').datetimepicker({
                                pickTime: false,
                                format: 'MM/DD/YYYY'
                            });

                            $('#trgdate').datetimepicker({
                                pickTime: false,
                                format: 'MM/DD/YYYY'
                            });
                        });
                    </script>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-1">
                    &nbsp;
                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    Select Leave Type
                </div>
                <div class="col-md-2">
                    @Html.DropDownList("ddl_Leave", (IEnumerable<SelectListItem>)ViewBag.LeaveType, new { @class = "form-control" })
                </div>
                <script>
                    $("#ddl_ShiftId option").eq(0).before($("<option></option>").val("").text("Select")).attr('selected', 'selected');
                    $('#ddl_ShiftId option:eq(1)').prop('selected', false);
                </script>

            </div>

            <div class="row">
                <div class="col-md-1">
                    &nbsp;
                </div>
            </div>




            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-3">
                    <input id="btn_submit" type="button" class="btn btn-success" value="Submit" />
                    &nbsp;
                    <input id="btn_clear" type="button" class="btn btn-info" value="Clear Leave" />
                </div>
            </div>
        </div>
    </div>
</div>








